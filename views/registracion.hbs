                <br>
                     <div class="card-body px-lg-5 pt-0">

                    <form class="text-center"  action="/registracion" method="post">

                        <div class="form-row">
                            <div class="col">
                                <div class="md-form">
                                    <input type="text" name="usuario" id="usuario" class="form-control">
                                    <label for="usuario"><i class="fas fa-user-alt"></i> First name</label>
                                </div>
                            </div>
                            <div class="col">

                                <div class="md-form">
                                    <input type="text" name="lastName" id="lastName" class="form-control">
                                    <label for="lastName"><i class="fab fa-odnoklassniki"></i> Last name</label>
                                </div>
                            </div>
                        </div>



                        <div class="md-form mt-0">
                            <input type="text" name="email" id="email" class="form-control">
                            <label for="email"><i class="fas fa-envelope"></i> E-mail</label>
                        </div>


                        <div class="md-form">
                            <input type="password" name="password" id="password" class="form-control" aria-describedby="materialRegisterFormPasswordHelpBlock">
                            <label for="materialRegisterFormPassword"><i class="fas fa-lock"></i> Password</label>
                            <small id="materialRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
